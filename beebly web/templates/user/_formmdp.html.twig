    <td>{{form_widget(form.cin,{ 'attr': {'class': 'form-control my-2','value':user.cin,'style':'display:none'} })}}</td>   
    <td>{{form_errors(form.cin)}}</td> 
   </tr>

   </table>

   {{ form_widget(form) }}
    <div class="d-flex justify-content-center my-2">
      <button class="btn btn-primary">{{ button_label|default('submit') }}</button>
    </div>
   {{ form_end(form) }}
   

