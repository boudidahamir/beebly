    <td>{{form_widget(form.nom,{ 'attr': {'class': 'form-control my-2','value':user.nom,'style':'display:none'} })}}</td>
    <td>{{form_errors(form.nom)}}</td>
   </tr>
   

   <tr>
    <td>{{form_widget(form.prenom,{ 'attr': {'class': 'form-control my-2','value':user.prenom,'style':'display:none'} })}}</td>
    <td>{{form_errors(form.prenom)}}</td>
   </tr>

   <tr>    
    <td>{{form_widget(form.adrmail,{ 'attr': {'class': 'form-control my-2','value':user.adrmail,'style':'display:none'} })}}</td>
    <td>{{form_errors(form.adrmail)}}</td>
   </tr>

   <tr>
    <td>{{form_label(form.mdp," ")}}</td>
    <td>{{ form_widget(form.mdp, {'attr': {'class': 'form-control my-2'}}) }}</td>
