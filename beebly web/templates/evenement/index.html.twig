{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Image</th>
                <th>Date</th>
                <th>Description</th>
                <th>Emplacement</th>
                <th>NbPlace</th>
                <th>Duree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.libelle }}</td>
                <td>{{ evenement.image }}</td>
                <td>{{ evenement.date }}</td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.emplacement }}</td>
                <td>{{ evenement.nbPlace }}</td>
                <td>{{ evenement.duree }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}"><button class="btn btn-secondary"> Show </button></a>
                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}"><button class="btn btn-warning"> Edit </button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}"><button class="btn btn-primary"> Create New </button></a>
{% endblock %}
